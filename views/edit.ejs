<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo App</title>
    <!-- Stylesheet -->
    <link rel="stylesheet" href="../css/styles.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <!-- Font -->
    <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville&display=swap" rel="stylesheet">
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <section class="container container-main">
        <div class="container container-insert col-8 my-5">
            <h2 class="text-center py-3">Edit To Do List</h2>
            <div class="row my-2">
                <% todoTasks.forEach(task=> {%>
                    <% if(task._id==idTask){%>
                        <div class="d-flex justify-content-center">
                            <form action="/" method="post" class="text-center">
                                <div class="my-2">
                                    <label for="title" class="form-label">Title</label>
                                    <input type="text" class="form-control" id="title" name="title">
                                </div>
                                <div class="my-2">
                                    <label for="content" class="form-label">Task</label>
                                    <input type="text" class="form-control" id="content" name="content">
                                </div>
                                <button type="submit" class="btn btn-success my-2">
                                    <span class="">Confirm Edit</span>
                                </button>
                                <a href="/" class="btn btn-danger cancel">Cancel Edit</a>
                            </form>
                        </div>

                        <% } else{ %>
                            <div class="col-sm-12 col-md-6 col-lg-4 my-3">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <div class="card-title my-3">
                                            <%= task.title %>
                                        </div>
                                        <div class="card-text my-3">
                                            <%= task.content %>
                                        </div>
                                        <div class="row my-3">
                                            <a href="/edit/<%=task._id%>" class="col-6 edit">
                                                <span class="fas fa-edit"></span>
                                            </a>
                                            <a href="/remove/<%=task._id%>" class="col-6 remove">
                                                <span class="fas fa-times"></span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                                <% }) %>
            </div>
        </div>
    </section>
    </div>

    </section>
</body>

</html>